{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "incremental": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["*"],
      "@guard/*": ["auth/guard/*"],
      "@user/*": ["user/*"],
      "@utils/*": ["utils/*"],
      "@redis/*": ["redis/*"],
      "@config/*": ["config/*"],
      "@auth/*": ["auth/*"]
    }
  }
}
