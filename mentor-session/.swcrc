{
  "$schema": "https://json.schemastore.org/swcrc",
  "sourceMaps": true,
  "jsc": {
    "parser": {
      "syntax": "typescript",
      "decorators": true,
      "dynamicImport": true
    },
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@guard/*": ["auth/guard/*"],
      "@user/*": ["user/*"],
      "@utils/*": ["utils/*"],
      "@redis/*": ["redis/*"],
      "@config/*": ["config/*"],
      "@auth/*": ["auth/*"]
    }
  },
  "minify": false
}
